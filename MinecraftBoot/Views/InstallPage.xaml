                                            SelectionMode="Single"
                                            ItemsSource="{x:Bind _releaseGames, Mode=OneWay}"
                                            ItemTemplate="{StaticResource ContactListViewTemplate}"/>
                                    </wuc:SettingsCard>
                                </wuc:SettingsExpander.Items>
                            </wuc:SettingsExpander>

                            <wuc:SettingsExpander Header="快照">
